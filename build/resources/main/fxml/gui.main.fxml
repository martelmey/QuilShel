<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="startPage" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.main.Controller">

    <top>
      <VBox>
         <children>
              <MenuBar>
                  <menus>
                      <Menu fx:id="mainMenu" text="File">
                          <items>
                              <MenuItem onAction="#showNewPoemWindow" text="New Poem ..." />
                          </items>
                          <items>
                              <MenuItem fx:id="mainMenuOpen" onAction="#showOpenPoemWindow" text="Open ..." />
                          </items>
                          <items>
                              <MenuItem onAction="#showSaveWindow" text="Save ..." />
                          </items>
                          <!--                    <items>-->
                          <!--                        <MenuItem text="Save As ..." />-->
                          <!--                    </items>-->
                          <items>
                              <MenuItem onAction="#handleExit" text="Exit ..." />
                          </items>
                      </Menu>
                  </menus>
                  <Menu text="Poem">
                      <items>
                          <MenuItem text="New Stanza ..." />
                      </items>
                      <items>
                          <MenuItem text="Delete Stanza ..." />
                      </items>
                      <items>
                          <MenuItem text="Edit Properties ..." />
                      </items>
                  </Menu>
                  <Menu text="Stanza">
                      <items>
                          <MenuItem text="New Bar ..." />
                      </items>
                      <items>
                          <MenuItem text="Delete Bar ..." />
                      </items>
                  </Menu>
              </MenuBar>
         </children>
      </VBox>
    </top>

    <left>
        <ListView fx:id="stanzaListView" prefHeight="300.0" prefWidth="175.0">

        </ListView>
    </left>

    <center>
        <ListView fx:id="barListView" prefHeight="300.0" prefWidth="175.0">

        </ListView>
    </center>

    <right>
        <ListView fx:id="measureListView" prefHeight="300.0">

        </ListView>
    </right>

    <bottom>
        <HBox>
            <Label fx:id="titleLabel" />
        </HBox>
    </bottom>

</BorderPane>
